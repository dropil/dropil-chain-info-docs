@font-face {
  font-family: 'Lato';
  src: url('/info/fonts/Lato-Regular.woff') format('woff'), url('/info/fonts/Lato-Regular.woff2') format('woff2'), url('/info/fonts/Lato-Regular.ttf') format('truetype');
}

$font-family-base = 'Lato';
$font-size-small = 15px;
$font-size-base = 16px;

::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: #ececec;
}

::-webkit-scrollbar-thumb {
  background: #989898;
  border-radius: 10px;
}

html, body {
  font-family: $font-family-base;
  font-size: 100%;
  font-smoothing: antialiased;
  color: $c-grey-font;
  font-size: $font-size-small;

  @media (min-width: 768px) {
    font-size: $font-size-base;
  }
}

.theme-container {
  // Headings
  h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    color: #4173ff;
  }

  h1 {
    color: #203d8c;
    font-size: 1.75rem;
    font-family: $font-family-base;

    @media (min-width: 480px) {
      font-size: 2rem;
    }

    @media (min-width: 768px) {
      font-size: 2.25rem;
    }
  }

  h2 {    
    font-size: 1.5rem;
    border-bottom: 0;
  }

  h3 {
    font-size: 1.25rem;
  }

  h4 {
    font-size: 1rem;
  }

  h5 {
    font-size: 0.5rem;
  }

  h6 {
    font-size: 0.35rem;
  }

  .theme-default-content ul > li {
    position: relative;
    padding-left: 1.5rem;
    list-style: none;

    &:before {
      content: '';
      width: 14px;
      height: 14px;
      background-image: url('/info/images/bullet-point.svg');
      background-size: contain;
      background-repeat: no-repeat;
      background-position: 0 0;
      position: absolute;
      top: 7px;
      left: 0;
    }

    ul {
      padding-left: 0;

      > li {
        font-size: 0.9em;
        padding-left: 20px;

        &:before {
          width: 9px;
          height: 9px;
          top: 6.5px;
        }
      }
    }
  }

  .navbar, .navbar .links {
    background-color: #222b3d;
  }

  @media (min-width: 720px) {
    .nav-links a {
      color: #fff;

      .icon.outbound {
        color: #fff;
      }
    }

    .nav-links a:hover, .nav-links a.router-link-active, .dropdown-wrapper .dropdown-title {
      color: #fff;
    }

    .nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
      border-bottom-color: #fff;
    }

    .dropdown-wrapper .nav-dropdown .dropdown-item a {
      color: #000;

      .icon.outbound {
        color: #aaa;
      }
    }
  }

  .sidebar-button .icon {
    color: #fff;
  }

  .sidebar > .sidebar-links {
    padding: 2.25rem 0 1.5rem;
  }

  .theme-default-content:not(.custom) {
    padding: 3rem 2.5rem 2rem;
  }

  .theme-default-content:not(.custom), .page-nav {
    margin-left: 0;
  }

  .theme-default-content code {
    color: #092b4c;
    background-color: rgba(9, 43, 76, 0.15);
    white-space: pre-wrap;
  }

  @media (min-width: 960px) {
    .page {
      padding-left: 18rem;
    }
  }

  .site-name.can-hide {
    display: none;
  }

  .sidebar-heading {
    line-height: 1;
  }

  .sidebar-heading, 
  .sidebar > .sidebar-links > li > a.sidebar-link,
  .sidebar-heading.open, .sidebar-heading:hover {
    color: #203d8c;
    font-family: $font-family-alt;
    font-size: 1.25em;
  }
}